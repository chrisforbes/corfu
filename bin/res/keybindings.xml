<?xml version="1.0" encoding="utf-8"?>
<keybindings>
	<binding key="Left" action="MoveLeft"/>
	<binding key="Left+Shift" action="MoveLeft"/>
	<binding key="Right" action="MoveRight"/>
	<binding key="Right+Shift" action="MoveRight"/>
	<binding key="Up" action="MoveUp"/>
	<binding key="Up+Shift" action="MoveUp"/>
	<binding key="Down" action="MoveDown"/>
	<binding key="Down+Shift" action="MoveDown"/>
	<binding key="Left+Ctrl" action="MoveByWordLeft"/>
	<binding key="Left+Ctrl+Shift" action="MoveByWordLeft"/>
	<binding key="Right+Ctrl" action="MoveByWordRight"/>
	<binding key="Right+Ctrl+Shift" action="MoveByWordRight"/>
	<binding key="Home+Ctrl" action="MoveDocumentStart"/>
	<binding key="Home+Ctrl+Shift" action="MoveDocumentStart"/>
	<binding key="End+Ctrl" action="MoveDocumentEnd"/>
	<binding key="End+Ctrl+Shift" action="MoveDocumentEnd"/>
	<binding key="Home" action="MoveLineStart"/>
	<binding key="Home+Shift" action="MoveLineStart"/>
	<binding key="End" action="MoveLineEnd"/>
	<binding key="End+Shift" action="MoveLineEnd"/>
	<binding key="PageUp" action="MoveLineUp"/>
	<binding key="PageUp+Shift" action="MoveLineUp"/>
	<binding key="PageDown" action="MoveLineDown"/>
	<binding key="PageDown+Shift" action="MoveLineDown"/>
	<!-- hax -->
	<binding key="Escape" action="Unselect"/>
	<binding key="Ctrl+Space" action="ShowCompletion"/>
	<binding key="Delete" action="Delete"/>
	<binding key="Shift+Delete" action="KillLine"/>
	<binding key="Ctrl+L" action="KillLine"/>
	<binding key="Tab" action="Indent"/>
	<binding key="Shift+Tab" action="Unindent"/>
	<binding key="Ctrl+Up" action="ScrollUp"/>
	<binding key="Ctrl+Down" action="ScrollDown"/>
	<binding key="Ctrl+J" action="RefreshStyles"/>
</keybindings>
