<?xml version="1.0" encoding="utf-8"?>

	<!--
		Defines the known file types. 
		
		Note that all we direct from here is the rootscope for the language
		support. We used to specify a grammar, but this way is easier for
		mixing languages.
	--> 

<filetypes>
	<filetype name="Plain Text" suffix=".txt" rootscope="text.plain"/>
	<filetype name="Todo List" suffix=".todo" rootscope="text.todo"/>
	<filetype name="JavaScript" suffix=".js" rootscope="source.javascript"/>
	<filetype name="INI File" suffix=".ini" rootscope="text.ini"/>
	<filetype name="Cascading Style Sheet" suffix=".css" rootscope="text.css"/>
	<filetype name="ABC Notation File" suffix=".abc" rootscope="text.abc"/>
	<filetype name="Delphi Source File" suffix=".pas" rootscope="source.delphi"/>
	<filetype name="Delphi Project File" suffix=".dpr" rootscope="source.delphi"/>
	<filetype name="Haskell Source File" suffix=".hs" rootscope="source.haskell"/>
	<filetype name="HLSL Source" suffix=".fx" rootscope="source.hlsl"/>
	<filetype name="HLSL Source" suffix=".fxi" rootscope="source.hlsl"/>
	<filetype name="C++ Source" suffix=".cpp" rootscope="source.c++"/>
	<filetype name="C++ Source" suffix=".cxx" rootscope="source.c++"/>
	<filetype name="C++ Source" suffix=".cc" rootscope="source.c++"/>
	<filetype name="C Source" suffix=".c" rootscope="source.c++"/>
	<filetype name="C/C++ Header" suffix=".h" rootscope="source.c++"/>
	<filetype name="Java Source" suffix=".java" rootscope="source.java"/>
	<filetype name="C# Source" suffix=".cs" rootscope="source.c#"/>
	<filetype name="CIL Source" suffix=".il" rootscope="source.cil"/>
	<filetype name="D Source" suffix=".d" rootscope="source.d"/>
	<filetype name="Python Source" suffix=".py" rootscope="source.python"/>
	<filetype name="Assembly Source" suffix=".s" rootscope="source.asm"/>
	<filetype name="LaTeX Source" suffix=".tex" rootscope="source.latex"/>
	<filetype name="Corfu Language Grammar" suffix=".gx" rootscope="source.gx"/>
	<filetype name="XML" suffix=".xml" rootscope="markup.xml"/>
	<filetype name="Ruby Source" suffix=".rb" rootscope="source.ruby" />
	<filetype name="CMD shell script" suffix=".cmd" rootscope="source.cmd"/>
	<filetype name="Makefile" suffix=".mak" rootscope="source.makefile"/>
	<filetype name="SQL Source" suffix=".sql" rootscope="source.sql"/>
</filetypes>

