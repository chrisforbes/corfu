<?xml version="1.0" encoding="utf-8" ?>
<language>
	<pattern regex="\b(extends|beforefieldinit|static|public|private|hidebysig)\b" style="keyword.il"/>
	<pattern regex="\b(auto|ansi|literal|newslot|final)\b" style="keyword.il"/>
	<pattern regex="\b(finally|valuetype|class|instance|cil|managed|(rt)?specialname|virtual)\b" style="keyword.il"/>
	<pattern regex="\b(void|bool|int32|string|native int|object)\b" style="keyword.type.il"/>
	
	<pattern regex="(^|\s)\.\w+\b" style="keyword.il"/>
	
	<pattern regex="//.*$" style="comment.il"/>
	<pattern regex="(^|\s)[a-zA-Z0-9_]+:" style="directive.label.il"/>
	
	<contextPattern style="directive.ref.il">
		<begin>
			<pattern regex="\[" style="directive.ref.il"/>
		</begin>
		<end>
			<pattern regex="\]" style="directive.ref.il"/>
		</end>
	</contextPattern>
	
	<contextPattern style="comment.il">
		<begin>
			<pattern regex="/\*" style="comment.il"/>
		</begin>
		<end>
			<pattern regex="\*/" style="comment.il"/>
		</end>
	</contextPattern>
	
	<contextPattern style="string.il">
		<begin>
			<pattern regex="&quot;" style="string.il"/>
		</begin>
		<end>
			<pattern regex="(?&lt;!\\)(\\\\)*&quot;" style="string.il"/>
		</end>
	</contextPattern>
	
	<contextPattern style="string.il">
		<begin>
			<pattern regex="'" style="string.il"/>
		</begin>
		<end>
			<pattern regex="(?&lt;!\\)(\\\\)*'" style="string.il"/>
		</end>
	</contextPattern>
</language>

