<?xml version="1.0" encoding="utf-8"?>
<language>
	<pattern regex="\b(break|else|new|var|case|finally|return)\b" style="keyword.javascript"/>
	<pattern regex="\b(void|catch|for|switch|while|continue)\b" style="keyword.javascript"/>
	<pattern regex="\b(function|this|with|default|if|throw|delete)\b" style="keyword.javascript"/>
	<pattern regex="\b(in|try|do|instanceof|typeof|null|true|false)\b" style="keyword.javascript"/>
	
	<pattern regex="//.*$" style="comment.javascript"/>
	
	<contextPattern style="comment.javascript">
		<begin>
			<pattern regex="/\*" style="comment.javascript"/>
		</begin>
		<end>
			<pattern regex="\*/" style="comment.javascript"/>
		</end>
	</contextPattern>
	
	<contextPattern style="string.javascript">
		<begin>
			<pattern regex="&quot;" style="string.javascript"/>
		</begin>
		<end>
			<pattern regex="(?&lt;!\\)(\\\\)*&quot;" style="string.javascript"/>
		</end>
	</contextPattern>
	
	<contextPattern style="keyword.type.regex.javascript">
		<begin>
			<pattern regex="/" style="keyword.type.regex.javascript"/>
		</begin>
		<end>
			<pattern regex="(?&lt;!\\)(\\\\)*/" style="keyword.type.regex.javascript"/>
		</end>
	</contextPattern>
</language>
