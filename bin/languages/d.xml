<?xml version="1.0" encoding="utf-8"?>
<language>

	<!-- comments -->

	<pattern regex="//.*$" style="comment.d"/>
	
	<contextPattern style="comment.d">
		<begin>
			<pattern regex="/\*" style="comment.d"/>
		</begin>
		<end>
			<pattern regex="\*/" style="comment.d"/>
		</end>
	</contextPattern>
	
	<!-- strings -->
	<contextPattern style="string.d">
		<begin>
			<pattern regex="&quot;" style="string.d"/>
		</begin>
		<end>
			<pattern regex="&quot;" style="string.d"/>
		</end>
	</contextPattern>
	
	<!-- keywords -->
	<pattern regex="\b(interface|class|alias|extern|import|null|cast|typedef|function|delegate)\b" style="keyword.d"/>
	<pattern regex="\b(invariant|scope|this|const|module|static|new|delete|version)\b" style="keyword.d"/>
	<pattern regex="\b(struct|final|enum|export|super|pragma)\b" style="keyword.d" />
	<pattern regex="\b(public|private|protected)\b" style="keyword.visibility.d"/>
	<pattern regex="\b(if|else|while|foreach|for|return|true|false|try|do|catch)\b" style="keyword.d"/>
	<pattern regex="\b(void|int|bool|bit|char|string)\b" style="keyword.type.d"/>
	
	
</language>
