<?xml version="1.0" encoding="utf-8"?>
<language>
	<pattern regex="%(?!%).+$" style="comment.abc"/>
	<pattern regex="%%[^%]+" style="directive.style.abc"/>
	
	<capturePattern regex="^(\w):([\w\d&quot;/ =\.,;'\(\)\-~\\@]+)"
		group0="markup"
		group1="markup.attribute.abc"
		group2="markup.value.abc"/>
	
	<capturePattern regex="\[(\w):([\w\d&quot;/ =\.,;'\(\)\-~\\]+)\]"
		group0="markup"
		group1="markup.attribute.abc"
		group2="markup.value.abc"/>
	
	<pattern regex="((\|[\]:\|]*)|([\[:][\]:\|]+))"
		style="punctuation.barline.abc"/>
	
	<pattern regex="\\\s*$" style="punctuation.lineContinuation.abc"/>
	
	<pattern regex="\+[\w\d\. \(\)&lt;&gt;]+\+" style="punctuation.symbol.abc"/>
</language>

